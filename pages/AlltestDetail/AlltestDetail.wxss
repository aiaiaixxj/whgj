/* pages/AlltestDetail/AlltestDetail.wxss */
.container {
  padding: 0 0;
}
.Main-box{
  display: flex;
  flex-direction: column;
}
.title {
  display: flex;
  text-indent: 2em;
}

.radioGroup {
  margin: 19px 14px;
}

.checkboxGroup {
  margin: 19px 14px;
}

/* 未选中的 背景样式 */
checkbox .wx-checkbox-input {
  /* 背景的高 */
  line-height: 35rpx;
  /* border-radius: 50%; */
  /* 圆角:border-radius: 50%; */
  margin: 10rpx;
  flex: none;
}
/* 未选中的 背景样式 */
radio .wx-radio-input {

  /* 背景的高 */
  line-height: 35rpx;
  /* border-radius: 50%; */
  /* 圆角:border-radius: 50%; */
  margin: 10rpx;
  flex: none;
}

radio {
  margin: 10rpx
}

.bottom-bar {
  position: fixed;
  /* background-color: #EEEEEE; */
  bottom: 20px;
  display: flex;
  width: 100%;
  justify-content: center;
}

.btn {
  background-color: #D8271D;
  color: white;
  font-size: 20px;
  letter-spacing: 3px;
  width: 132px;
  height: 40px;
  line-height: 40px;
  text-align: center;
  margin: 0 10px;
  border-radius: 20px;
}

view .van-field__input {
  text-align: center;
  background-color: pink;
  border: 1px red solid;
}

view .van-button {
  width: 132px;
  height: 40px;
  margin: 0 10px;
}

.all {
  width: 36px;
  height: 32px;
}

.datika {
  display: flex;
  flex-direction: column;
  text-align: center;
  font-size: 12px;
}

view .van-bottom-enter-to {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.allquestionsBox {
  position: relative;
  top: 50px;
}

.allquestionsBox-child {
  border-radius: 50%;
  width: 40px;
  height: 40px;
  background-color: #1099FB;
  text-align: center;
  line-height: 40px;
  margin: 8px 8px;
}

.allquestionsBox-child1 {
  border-radius: 50%;
  width: 40px;
  height: 40px;
  background-color: #D3D3D3;
  text-align: center;
  line-height: 40px;
  margin: 8px 8px;
}
input{
  background-color: pink;
}
.ans-btn {
  margin: 120rpx 32rpx 32rpx 32rpx;
  opacity: 0.5;
  background: #4193FF;
  border-radius: 6px;
  text-align: center;
  height: 92rpx;
  line-height: 92rpx;
  font-family: 'PingFangSC-Regular';
  font-size: 15px;
  color: #FFFFFF;
}
.ans-btn-active {
  opacity: 1;
}
view .van-progress{
  width: 100%;
  /* left: 5%; */
}
progress{
  width: 62%;
}
.progress-box{
  display: flex;
  justify-content: space-around;
}
.Completion{
  text-indent: 2em;
}
.item {

  display: inline-block;
  width: 22px;
  margin-right: 5px;
  color: #fff;
  font-size: 12px;
  text-align: center;
  background-color: red;
  border-radius: 2px;
}