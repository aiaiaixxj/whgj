}

.content_mark {
  height: 21px;
  width: 5px;
  background-color: #B11E2E;
}

.content_title {
  font-size: 17px;
  font-weight: 600;
  margin: 0 8px;
}

.content_main {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  text-indent: 2rem;
  margin: -7px 19px;
  color: #969696;
  font-size: 14px;
}