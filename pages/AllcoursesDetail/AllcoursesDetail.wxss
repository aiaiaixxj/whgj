.divLine {
  background: #E0E3DA;
  width: 100%;
  height: 3rpx;
}

.title_item {
  display: flex;
  justify-content: center;
}


.video_box {
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.custom-class {
  display: flex;
  margin-top: 10px;
}

.myVideo {
  margin: 0 auto;
}

.process-container {
  display: flex;
  flex-direction: row;
}

.video-controls-icon {
  height: 40px;
  width: 40px;
}

.slider-container {
  width: 90vw;
}

.cover-view {
  position: absolute;
  bottom: 0;
  left: 9%;
  width: 82%;
  height: 13%;
  opacity: .1;
  background: gray;
}

.cover-view1 {
  position: absolute;
  top: 0;
  width: 100%;
  height: 88%;
  opacity: .1;
  background: gray;
}

.content {
  display: flex;
  flex-direction: row;
  margin: 17px 18px;
  /* text-indent: 1rem; */
