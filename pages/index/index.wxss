page {
  overflow: auto;
}

.nav {
  width: 100%;
  height: 221px;
  background-color: red;
}

.PersonalInfoBox {
  display: flex;
  justify-content: center;
  flex-direction: row;
}

.mengceng {
  display: block;
  width: 92%;
  height: 192px;
  /* background: rgba(0, 0, 0, .2); */
  bottom: 5%px;
  left: 4%;
  position: relative;
  border-radius: 12px;
}

.custom-class {
  display: flex;
  justify-content: center;
  margin-top: 10px;
  font-size: 20px;
  color: white;
}

van-grid-item p {
  margin-top: 8px;
  font-size: 13px;
  letter-spacing: 2px
}

van-grid-item image {
  width: 55px;
  height: 55px;
  position: relative
}

.mcbg-img {
  width: 92%;
  height: 192px;
  bottom: 5%px;
  left: 4%;
  position: fixed;
  border-radius: 12px;
}

.divide-line {
  position: relative;
  width: 90%;
  height: 1px;
  background-color: #FE9D18;
  margin: 20rpx auto
}

.personalinfo-font {
  color: white;
  font-size: 15px;
  display: flex;
  z-index: 999;
  flex-direction: row;
}

.personalinfo-font-rightmark {
  z-index: 999;
  margin-top: -2px;
  font-size: 38rpx;
  color: white;
}