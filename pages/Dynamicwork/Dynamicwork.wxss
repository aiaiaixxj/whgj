/* pages/Dynamicwork/Dynamicwork.wxss */
page {
  background-color: #f6f6f6;
  width: 100%;
  overflow-x: hidden;
}

.user-panel {
  width: 100%;
  overflow-x: hidden;
  display: flex;
    flex-direction: row;
    border-bottom: 2rpx solid #C0C0C0;
}

.divLine {
  background: #E0E3DA;
  width: 100%;
  height: 3rpx;
}

.title {
  background-color: #fff;
  color: #000;
  font-weight: bold;
  font-size: 28rpx;
  padding: 20rpx 20rpx 20rpx 40rpx;
  margin-top: 20rpx;
  border-bottom: 2rpx solid #f6f6f6;
  position: relative;
}

.title::after {
  content: "";
  display: block;
  width: 6rpx;
  height: 20rpx;
  background-color: #f40000;
  position: absolute;
  left: 20rpx;
  top: 50%;
  margin-top: -10rpx;
  z-index: 1;
}

.box {
  background-color: #fff;
}

.navigator {
  margin: 0 20rpx;
  padding: 30rpx 0;
  display: flex;
  align-items: center;
  width: 100%;
}


.center {
  flex-grow: 1;
  height: 80rpx;
}

.name {
  display: flex;
  align-items: center;
}

.name-text {
  position: relative;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  /* margin-right: 20rpx; */
  top: 0rpx;
  width: 100%;
  height: 45rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.code {
  display: flex;
  font-size: 28rpx;
  color: #999;
  /* flex-direction: row-reverse; */
  margin-top: 10rpx;
}

.custom-class {
  text-align: center;
}

.custom-class1 {
  position: relative;
  left: 40%;
}