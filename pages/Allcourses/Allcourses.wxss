/* pages/Allcourses/Allcourses.wxss */
page {
  width: 100%;
  overflow-x: hidden;
  background-color: #f6f6f6;
}

.main_serchbox {
  width: 100%;
  height: 60px;
  background-color: red;
  position: relative;
}

.main_serchbox_icon {
  position: absolute;
  top: 18px;
  right: 25%;
  z-index: 99;
}

.main_serchbox_input {
  width: 70%;
  height: 30px;
  background-color: white;
  position: absolute;
  top: 15px;
  left: 11px;
  border-radius: 15px;
  padding-left: 25px;
}

.main_serchbox_cancle {
  position: absolute;
  top: 18px;
  right: 23%;
  color: gray;
  z-index: 999;
}

.main_serchbox_querry {
  position: absolute;
  top: 18px;
  right: 10%;
  color: white;
  z-index: 99;
}

.user-panel {
  width: 100%;
  overflow: hidden;
}

.divLine {
  background: #E0E3DA;
  width: 100%;
  height: 3rpx;
}

.box {
  background-color: #fff;
}

.navigator {
  /* padding: 10rpx 10rpx; */
  display: flex;
  flex-direction: row;
  border-bottom: 2rpx solid #EAEAEA;
  padding-bottom: 26rpx;
  margin-top: 25rpx;
}

.head {
  flex-shrink: 0;
  width: 190rpx;
  height: 130rpx;
  margin-right: 20rpx;
  margin-left: 25rpx;
}

.imgBorder {
  border: 3rpx solid #EAEAEA;
  border-radius: 10rpx;
  padding: 10rpx;
  margin-left: 25rpx;
}

.center {
  margin-left: 12rpx;
  margin-top: 13rpx;
}

.name {
  display: flex;
  align-items: center;
}

.name-text {
  margin-top: -8rpx;
  font-size: 27rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
  width: 99%;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.code {
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
}

.custom-class {
  text-align: center;
}

.custom-class1 {
  position: relative;
  left: 40%;
}

.van-enter-active-class,
.van-leave-active-class {
  transition-property: background-color, transform;
}

.van-enter-class,
.van-leave-to-class {
  background-color: red;
  transform: rotate(-360deg) translate3d(-100%, -100%, 0);
}

.querry_box {
  background-color: pink;
  height: 40px;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  line-height: 40px
}

.close_img {
  width: 20px;
  height: 20px;
  display: inline;
  margin: 5px -45px;
}

.querrytag {
  height: 21px;
  line-height: 21px;
  border-radius: 13px;
  font-size: 11px;
  margin: 10px 0;
  width: 44px;
  text-align: center;
  color: white;
}

.querrytag1 {
  background-color: #0CC165;
}

.querrytag2 {
  background-color: #ED052D;
}